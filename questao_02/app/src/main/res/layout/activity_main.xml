<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexalins.questao_02.MainActivity">

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adultos"
            android:id="@+id/textView"
            android:layout_below="@+id/absoluteLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="128dp"
            android:layout_marginStart="128dp"
            android:textSize="18dp"
            android:layout_x="20dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_below="@+id/absoluteLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_x="10dp"
            android:layout_y="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crianças"
            android:id="@+id/textView2"
            android:layout_x="195dp"
            android:textSize="18dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_x="190dp"
            android:layout_y="10dp" />

    </AbsoluteLayout>

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/absoluteLayout4">

        <Button
            android:layout_width="99dp"
            android:layout_height="33dp"
            android:text="CALCULAR"
            android:id="@+id/button"
            android:layout_x="230dp"
            android:layout_y="60dp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:background="#e8b3ef" />
    </AbsoluteLayout>

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_y="130dp" />
    </AbsoluteLayout>

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/absoluteLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:id="@+id/textView3"
            android:textSize="22dp"
            android:layout_y="150dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que você precisa para festa:"
            android:id="@+id/textView4"
            android:layout_y="190dp" />

    </AbsoluteLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/absoluteLayout3"
        android:layout_marginTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:src="@drawable/fatia_bolo"
                android:layout_marginTop="-10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView5"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg bolo"
                android:id="@+id/textView6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:src="@drawable/doce" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView7"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unidades de doces"
                android:id="@+id/textView8"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3"
                android:src="@drawable/coxinha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView9"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unidades de salgados"
                android:id="@+id/textView10"
                android:textSize="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:src="@drawable/refri" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView11"
                android:layout_below="@+id/absoluteLayout4"
                android:layout_toRightOf="@+id/absoluteLayout4"
                android:layout_toEndOf="@+id/absoluteLayout4"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="litros de refrigerante"
                android:id="@+id/textView12"
                android:textSize="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
